{
  "manifest_version": 2,

  "name": "seamap",
  "description": "A chrome extension of module dependency graph",
  "version": "1.0.0",

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "default_title": "seamap"
  },

  "permissions": [
    "tabs",
    "cookies",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/", "https://*/", "<all_urls>"],
      "js": ["content.js"],
      "runat": "document_end"
    }
  ]
}
